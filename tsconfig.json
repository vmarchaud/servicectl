{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "rootDirs": ["src", "bin"],
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "strictNullChecks": true,
    "traceResolution": false,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "compileOnSave": false,
  "include": [
    "src/",
    "bin/", "src/models/systemd/types.ts"
  ]
}